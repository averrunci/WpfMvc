<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Library</OutputType>
    <RootNamespace>Charites.Windows</RootNamespace>
    <UseWPF>true</UseWPF>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/averrunci/WpfMvc</PackageProjectUrl>
    <Authors>averrunci</Authors>
    <Version>4.2.2</Version>
    <AssemblyVersion>4.2.2</AssemblyVersion>
    <FileVersion>4.2.2</FileVersion>
    <Description>The class library for Windows Presentation Foundation with Model View Controller.</Description>
    <Copyright>Copyright (C) 2022-2023 Fievus</Copyright>
    <PackageTags>wpf mvc charites</PackageTags>
    <NeutralLanguage>en-US</NeutralLanguage>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <OutputPath>..\..\Binary\Debug\</OutputPath>
    <DocumentationFile>..\..\Binary\Debug\net8.0-windows\WpfMvc.XML</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <OutputPath>..\..\Binary\Release\</OutputPath>
    <DocumentationFile>..\..\Binary\Release\net8.0-windows\WpfMvc.XML</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Charites" Version="2.2.0" />
    <PackageReference Include="Charites.Bindings" Version="2.2.0" />
  </ItemGroup>
</Project>