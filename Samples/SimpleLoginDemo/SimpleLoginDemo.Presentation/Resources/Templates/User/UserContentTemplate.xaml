<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:w="clr-namespace:Fievus.Windows.Mvc;assembly=WpfMvc"
                    xmlns:m="clr-namespace:Fievus.Windows.Samples.SimpleLoginDemo.Presentation.Contents.User"
                    xmlns:p="clr-namespace:Fievus.Windows.Samples.SimpleLoginDemo.Presentation.Properties">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Styles/User/UserContentStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <DataTemplate DataType="{x:Type m:UserContent}">
        <DockPanel>
            <w:WpfController.Controllers>
                <m:UserContentController/>
            </w:WpfController.Controllers>
            
            <StackPanel DockPanel.Dock="Top">
                <Button Name="LogoutButton"
                        Style="{StaticResource LogoutButtonStyle}"
                        Content="{x:Static p:Resources.LogoutButtonText}"/>
            </StackPanel>
            
            <TextBlock Style="{StaticResource MessageStyle}"
                       Text="{Binding Message}"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>